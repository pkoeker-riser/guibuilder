    <Group label='Tabelle durchsuchen' wy='0'>
      <Text label='Suchbegriff:' name='pattern' eol='false'/>
      <Button label='suchen' cmd='search' eol='false'/>
      <Check label='ignoreCase' name='ignore'/>
    </Group>
  </Form>
